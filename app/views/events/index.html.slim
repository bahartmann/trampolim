
h1 Veja eventos de seu interesse!

- if user_signed_in?
  a.btn.btn-primary href=new_event_path Criar Novo Evento

.btn-group
  = filter_button 'Plays', 'play', plays_events_path, @category
  = filter_button 'Concerts', 'concert', concerts_events_path, @category
  = filter_button 'Exibithions', 'exibithion', exibithions_events_path, @category

ul
- for event in @events do
  .col-lg-3.col-md-4.col-sm-6.col-xs-12
    .event-card
      - if event.poster?
        = image_tag(event.poster_url, class: "event-poster")
      - else
        = image_tag("defautl-poster.jpg", class: "event-poster")

      .event-informations  
        h3= event.title
        p= truncate(event.about, length: 100)
